{
  "manifest_version": 3,
  "name": "QR Code Generator",
  "version": "1.0",
  "description": "Generate QR codes from any content with customizable parameters",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "QR Code Generator"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}